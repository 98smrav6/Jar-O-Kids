<div>This is the Parent Dashboard View</div>

<ol class="student-list">
  {{#each student }}
  <li>
    <article class="student">
        <div class="student-name">
            <a href="/students/{{id}}">{{student.student_firstname}} {{student.student_lastname}}</a>
        </div>
        <div class="meta">
            <p>Student Address: {{student.student_address}}</p>
            <p>Student Grade: {{student.student_grade}}</p>
            <p>Student Enrollment Status:  {{student.student_status}}</p>
        </div>
    </article>
  </li>
  {{/each}}
</ol>

<section>
  <h2> Add a Student </h2>
  <form class="add-student-form">
    <div>
        <label for="student-firstname-add">Student First Name:</label>
        <input type="text" id="student-firstname-add" />
    </div>
    <div>
        <label for="student-lastname-add">Student Last Name:</label>
        <input type="text" id="student-lastname-add" />
    </div>
    <div>
        <label for="student-grade-add">Student Grade Level:</label>
        <input type="password" id="student-grade-add" />
    </div>
    <div>
        <label for="#address-add">Student Address:</label>
        <input type="phone" id="#address-add" />
    </div>

    <div>  
    <button type="submit">Add Student</button>
    </div>

  </form>
</section>

 <script src="/javascript/add-student.js"></script>
