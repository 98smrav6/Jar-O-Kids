
<ol class="student-list">
  <h2> Your Student(s) </h2>
  {{#each students as |student| }}
  <li>
    <article class="student">
        <div class="student-name">
            <a href="parentDash/edit/:{{id}}">{{student.student_firstname}} {{student.student_lastname}}</a>
        </div>
        <div class="meta">
            <p>Student Address: {{student.student_address}}</p>
            <p>Student Grade: {{student.student_grade}}</p>
            <p>Student Enrollment Status:  {{student.student_status}}</p>
        </div>
    </article>
  </li>
  {{/each}}
</ol>

<section>
  <h2> Add a Student </h2>
  
  <form class="add-student-form">
    <div class="student-form">
        <label for="student-firstname-add">Student First Name:</label>
        <input type="text" id="student-firstname-add" class="form-input input" placeholder="Enter Student First Name" />
    
        <label for="student-lastname-add">Student Last Name:</label>
        <input type="text" id="student-lastname-add" class="form-input input" placeholder="Enter Student Last Name" />
    
        <label for="student-grade-add">Student Grade Level:</label>
        <input type="text" id="student-grade-add" class="form-input input" placeholder="Enter Student Grade Level" />

        <label for="address-add">Student Address:</label>
        <input type="text" id="address-add" class="form-input input" placeholder="Enter Student Address" />
  
    <button class="add-student-btn" type="submit">Add Student</button>
    </div>

  </form>
</section>

<script src="/javascript/add-student.js"></script>
<script src="/javascript/logout.js"></script>
