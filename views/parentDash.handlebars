<section class="handlebar-header">
  <h1>Hello!</h1>
</section>
<ol class="student-list">
  <h2> See Your Student(s) Listed Below</h2>
  {{#each students as |student| }}
  <li>
    <article class="student">
        <div class="meta">
            <p>Student First Name: {{student.student_firstname}}</p>
            <p>Student Last Name: {{student.student_lastname}}</p> 
            <p>Student Address: {{student.student_address}}</p>
            <p>Student Grade: {{student.student_grade}}</p>
            <p>Student Enrollment Status:  {{student.student_status}}</p>
        </div>
        <div>
          <a href="/parentDash/edit/{{student.id}}" class="edit-link">Edit Student Info</a>
        </div>
    </article>
  </li>
  {{/each}}
</ol>

<section>
  <h2> Need to add a Student? Please fill out form below</h2>
  
  <form class="add-student-form">
    <div class="student-form">
        <label for="student-firstname-add">Student First Name:</label>
        <input type="text" id="student-firstname-add" class="form-student input" placeholder="Enter Student First Name"/>
    
        <label for="student-lastname-add">Student Last Name:</label>
        <input type="text" id="student-lastname-add"  class="form-student input" placeholder="Enter Student Last Name" />
    
        <label for="student-grade-add">Student Grade Level:</label>
        <input type="text" id="student-grade-add"  class="form-student input" placeholder="Enter Student Grade Level" />

        <label for="address-add">Student Address:</label>
        <input type="text" id="address-add"  class="form-student input" placeholder="Enter Student Address" />
  
    <div class="container">
    <button class="add-student-btn" type="submit">Add Student</button>
    </div>

  </form>
</section>

<script src="/javascript/add-student.js"></script>
<script src="/javascript/logout.js"></script>
